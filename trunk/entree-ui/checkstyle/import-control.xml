<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
    "-//Puppy Crawl//DTD Import Control 1.0//EN"
    "http://www.puppycrawl.com/dtds/import_control_1_0.dtd">

<import-control pkg="au.org.intersect.entreeui">

    <allow pkg="java.util" />
    <allow pkg="org.apache.log4j" />

    <subpackage name="controller">
        <allow pkg="java.io" />
        <allow pkg="org.springframework" />
        <allow pkg="au.org.intersect.entreecore" />
        <allow pkg="au.org.intersect.entreeui.ui" local-only="true" />
    </subpackage>

    <subpackage name="ui">
        <allow pkg="org.eclipse.jface" />
        <allow pkg="org.eclipse.swt" />
        <allow pkg="au.org.intersect.entreeui.ui.wizard" />

        <allow pkg="au.org.intersect.entreecore.worker" />
        <allow pkg="au.org.intersect.entreeui.worker" />

        <subpackage name="wizard">
            <allow pkg="au.org.intersect.entreeui.ui" />
            <allow pkg="java.net" />
        </subpackage>
    </subpackage>

    <subpackage name="util">
        <allow pkg="java.io" />
        <allow pkg="java.text" />
    </subpackage>

    <subpackage name="worker">
        <allow pkg="au.org.intersect.entreecore.datasource" />
        <allow pkg="au.org.intersect.entreecore.worker" local-only="true" />

        <allow pkg="au.org.intersect.entreeui.util" />
        <allow pkg="au.org.intersect.entreeui.util" />

        <allow pkg="java.io" />
        <allow pkg="au.org.intersect.entreecore.csv" />
        <allow pkg="au.org.intersect.entreecore.filesender" />
        <allow pkg="au.org.intersect.entreecore.hispid" />
    </subpackage>

</import-control>
